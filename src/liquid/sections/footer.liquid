<footer class="footer">

  <div class="container footer__container">
    <div class="footer__row">
      {% if section.settings.footer_logo  != blank %}
        <div class="footer__logo">
          {% include 'responsive-image' with image: section.settings.footer_logo, max_width: 52, max_height: 75 %}
        </div>
      {% endif %}
      <div class="footer__body">
      {% if section.settings.newsletter_toggle == true %}
          <div class="footer__newsletter newsletter">
                <p class="footer__heading">
                  Sign Up for Offers,<span class="newsletter__linebreaker"></span>
                  Product News, and Tips
                </p>
                <form class="newsletter__form">
                  <input type="text" class="newsletter__text" placeholder="Enter your phone or email" />
                  <button type="submit" class="newsletter__submit">SEND</button>
                </form>
                {% if section.settings.newsletter-text != nil %}
                <p class="newsletter__desc">
                    {{section.settings.newsletter-text}}
                </p>
                {% endif %}
          </div>
        {% endif %}
        {% if section.settings.enable_social == true %}
         <div class="footer__social social">
           {% if section.settings.social_heading != null %}
             <p class="social__heading footer__heading">
               {{section.settings.social_heading}}
             </p>
            {% endif %}
             <div class="social__items">
               {% if section.settings.ig_url != blank %}
                <div class="social__icon">
                  <a href="" >
                  {% render 'icon-ig' %}
                  </a>
                </div>
               {% endif %}
               {% if section.settings.fb_url != blank %}
                  <div class="social__icon">
                    <a href="">
                    {% render 'icon-fb' %}
                    </a>
                  </div>
                {% endif %}
                {% if section.settings.pt_url != blank %}
                  <div class="social__icon">
                    <a href="">
                    {% render 'icon-pt' %}
                    </a>
                  </div>
                {% endif %}
                {% if section.settings.tw_url != blank %}
                  <div class="social__icon">
                    <a href="" >
                    {% render 'icon-tw' %}
                    </a>
                  </div>
                {% endif %}
                {% if section.settings.yt_url != blank %}
                  <div class="social__icon">
                    <a href="" >
                    {% render 'icon-yt' %}
                    </a>
                  </div>
                {% endif %}
             </div>
         </div>
         {% endif %}

         <div class="footer__items">

          {% if section.settings.footer_linklist-1 %}
          {% assign link_list = linklists[section.settings.footer_linklist-1] %}
            <div class="footer__menu footerNav">
              <p class="footerNav__title">{{link_list.title}} <span class="footerNav__icon">{% include 'icon-chevron-down' %}</span></p>
                <ul class="footerNav__items">
                  {% for link in link_list.links %}
                  <li class="footerNav__menu">
                    <a href="{{link.url}}" class="footerNav__link">{{link.title}}</a>
                  </li>
                  {% endfor %}
                </ul>
            </div>
          {% endif %}

          {% if section.settings.footer_linklist-2 %}
          {% assign link_list = linklists[section.settings.footer_linklist-2] %}
            <div class="footer__menu footerNav">
              <p class="footerNav__title">{{link_list.title}} <span class="footerNav__icon">{% include 'icon-chevron-down' %}</span></p>
                <ul class="footerNav__items">
                  {% for link in link_list.links %}
                  <li class="footerNav__menu">
                    <a href="{{link.url}}" class="footerNav__link">{{link.title}}</a>
                  </li>
                  {% endfor %}
                </ul>
            </div>
          {% endif %}

          {% if section.settings.footer_linklist-3 %}
          {% assign link_list = linklists[section.settings.footer_linklist-3] %}
            <div class="footer__menu footerNav">
              <p class="footerNav__title">{{link_list.title}} <span class="footerNav__icon">{% include 'icon-chevron-down' %}</span></p>
                <ul class="footerNav__items">
                  {% for link in link_list.links %}
                  <li class="footerNav__menu">
                    <a href="{{link.url}}" class="footerNav__link">{{link.title}}</a>
                  </li>
                  {% endfor %}
                </ul>
            </div>
          {% endif %}
      </div>
    </div>
  </div>
</div>
  
  
</footer>

