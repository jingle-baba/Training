
   <div class="productGrid swiper-container">
        <div class="swiper-wrapper productGrid__items">
            {% for block in section.blocks %}
                <div class="productgrid__slide swiper-slide">
                    <div class="productgrid__image">
                        {% include 'responsive-image' with image: block.settings.product_image, max_width: 750, max_height: 750 %}
                        <!-- <img src="{{'image-product.png' | asset_img_url:'master'}}" alt="Product image" /> -->
                    </div>
                    <div class="productgrid__desc">
                        <div class="productgrid__star"></div>
                        <div class="productgrid__info">
                            <p class="productgrid__title">{{block.settings.product_title-left}} <span class="productgrid__title productgrid__title--regular">| {{block.settings.product_title-right}}</span></p>
                            <p class="productgrid__text">{{block.settings.product_text}}</p>
                        </div>
                        <a class="productgrid__cart link link--default">
                            ADD TO BAG 
                            <span class="pricegrid-divider">â€”</span>
                            <span class="productgrid__price">${{block.settings.product_price}}</span>
                            <span class="productgrid__price productgrid__price--cross"> ${{block.settings.product_cross}}</span>
                        </a>
                    </div>
                </div>
            {% endfor %}

        </div>
        <div class="productGrid__pagination pagination">
            <div class="pagination__fraction">
                <p class="pagination__text">
                    <span id="current-index" class="pagination__text pagination__text--bold">1</span>  /  <span id="total-number"></span>
                </p>
            </div>
          <div class="swiper-pagination swiper__progress"></div>
        </div>
    </div>
